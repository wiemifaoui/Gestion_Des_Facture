@model List<App.Web.Models.Traitement>;
@{
    ViewData["Title"] = "Ionos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Historiques des traitements </h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th></th>
                      <th></th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                      @foreach(var treatement in Model){
                          <tr>
                              <td>@treatement.DateTraitement</td>
                              <td>@treatement.NbrFactures factures traités</td>
                              <td>@treatement.TotalAmount TND</td>
                                <td> <a class="btn btn-block bg-gradient-danger" asp-action="DownloadHistory" asp-controller="Historique" asp-route-Id="@treatement.Id">Télécharger</a></td>
                          </tr>
                      }
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
